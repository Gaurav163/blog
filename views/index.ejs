    <style>
        #sbody img {
            max-width: 100%;
            max-height: 100vh;
        }
        
        div.a {
            color: black;
        }
        
        .auth {
            background: grey;
            padding: 5px;
            padding-right: 8px;
            padding-left: 8px;
            border-radius: 5px;
            color: rgb(94, 94, 94);
            transition: all 0.25s;
            color: white;
        }
        
        .auth:hover {
            box-shadow: 0px 0px 7px grey;
            background: white;
            color: grey;
        }
        
        .blogc {
            border: 0px;
            border-radius: 10px;
            box-shadow: 0px 0px 7px grey;
            transition: all 0.3s;
        }
        
        .blogc:hover {
            box-shadow: 0px 0px 10px black;
        }
        
        .content {
            max-height: 500px;
            overflow: hidden;
            overflow-y: scroll;
        }
        
        .logout {
            transition: all 0.2s;
            border-radius: 5px;
            border: 2px solid black;
        }
        
        .logout:hover {
            background: grey;
            border: 2px solid grey;
            color: white;
            text-decoration: bold;
            border-radius: 5px;
        }
        
        .hh {
            overflow: hidden;
            margin: 10px auto;
            width: 100%;
        }
        
        a:hover {
            color: red;
        }
        
        .btn a:hover {
            color: white;
        }
        
        .btn:hover a {
            color: white;
        }
    </style>
    <div class="container">
        <div class="jumbotron hh">
            <div class="float-left">
                <% if(name !=="logedout") {%>
                    Welcome to IIITP-BLOG,
